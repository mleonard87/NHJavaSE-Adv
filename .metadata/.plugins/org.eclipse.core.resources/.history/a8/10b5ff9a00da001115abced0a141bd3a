package com.webagesolutions.sax;

import org.xml.sax.SAXException;
import org.xml.sax.XMLReader;
import org.xml.sax.helpers.XMLReaderFactory;

public class XMLReaderNodeCount
{
  public static final String PARSER_NAME = "org.apache.crimson.parser.XMLReaderImpl";
  
  public static void main(String[] args)
  {
    try {
      XMLReader parser = XMLReaderFactory.createXMLReader(PARSER_NAME);
      parser.setFeature("http://xml.com/sax/features/validation", true);
    } catch (SAXException e) {
      // TODO Auto-generated catch block
      e.printStackTrace();
    }
  }
  
  
}
